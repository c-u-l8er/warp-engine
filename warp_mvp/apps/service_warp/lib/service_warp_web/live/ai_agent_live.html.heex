<div class="min-h-screen bg-gray-50">
  <!-- Header -->
  <header class="bg-white shadow-sm border-b border-gray-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center py-6">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <h1 class="text-3xl font-bold text-purple-600">ðŸ¤– AI Agent Dashboard</h1>
          </div>
          <div class="ml-6">
            <p class="text-sm text-gray-500">Autgentic AI Agents - Real-time Intelligence</p>
          </div>
        </div>
        <div class="flex items-center space-x-4">
          <button phx-click="trigger_ai_optimization" class="bg-purple-600 text-white px-4 py-2 rounded-md hover:bg-purple-700 transition-colors">
            ðŸš€ Trigger AI Optimization
          </button>
          <button phx-click="train_ai_model" class="bg-green-600 text-white px-4 py-2 rounded-md hover:bg-green-700 transition-colors">
            ðŸ§  Train Model
          </button>
        </div>
      </div>
    </div>
  </header>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- AI Confidence Score -->
    <div class="mb-8">
      <div class="bg-gradient-to-r from-purple-500 to-blue-600 rounded-lg shadow-lg p-6">
        <div class="flex items-center justify-between">
          <div>
            <h2 class="text-2xl font-bold text-white">AI Confidence Score</h2>
            <p class="text-purple-100">Overall system confidence based on performance metrics</p>
          </div>
          <div class="text-right">
            <div class="text-6xl font-bold text-white"><%= @ai_confidence %>%</div>
            <div class="text-purple-200">Confidence</div>
          </div>
        </div>
      </div>
    </div>

    <!-- Key AI Metrics -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="w-8 h-8 bg-green-100 rounded-full flex items-center justify-center">
              <span class="text-green-600 text-lg">ðŸ“Š</span>
            </div>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-500">Success Rate</p>
            <p class="text-2xl font-semibold text-gray-900">
              <%= Float.round(@ai_metrics.successful_assignments / @ai_metrics.total_assignments * 100, 1) %>%
            </p>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center">
              <span class="text-blue-600 text-lg">âš¡</span>
            </div>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-500">Avg Response</p>
            <p class="text-2xl font-semibold text-gray-900"><%= @ai_metrics.average_response_time %></p>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="w-8 h-8 bg-yellow-100 rounded-full flex items-center justify-center">
              <span class="text-yellow-600 text-lg">ðŸŽ¯</span>
            </div>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-500">Predictive Accuracy</p>
            <p class="text-2xl font-semibold text-gray-900"><%= @ai_metrics.predictive_accuracy %></p>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="w-8 h-8 bg-purple-100 rounded-full flex items-center justify-center">
              <span class="text-purple-600 text-lg">ðŸ’°</span>
            </div>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-500">Route Savings</p>
            <p class="text-2xl font-semibold text-gray-900"><%= @ai_metrics.route_optimization_savings %></p>
          </div>
        </div>
      </div>
    </div>

    <!-- AI Agent Status -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">
      <!-- Agent Status -->
      <div class="bg-white rounded-lg shadow">
        <div class="px-6 py-4 border-b border-gray-200">
          <h3 class="text-lg font-medium text-gray-900">AI Agent Status</h3>
        </div>
        <div class="p-6">
          <div class="space-y-4">
            <%= for agent <- @agent_status do %>
              <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg">
                <div class="flex items-center">
                  <div class="flex-shrink-0">
                    <div class="w-3 h-3 rounded-full <%= if agent.status == "active", do: "bg-green-400", else: "bg-yellow-400" %>"></div>
                  </div>
                  <div class="ml-3">
                    <p class="text-sm font-medium text-gray-900"><%= agent.name %></p>
                    <p class="text-xs text-gray-500">
                      <%= String.upcase(agent.status) %> â€¢ <%= agent.uptime %> uptime
                    </p>
                  </div>
                </div>
                <div class="text-right">
                  <div class="text-sm font-medium text-gray-900">
                    <%= Float.round(agent.performance_score * 100, 1) %>%
                  </div>
                  <div class="text-xs text-gray-500">Performance</div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Recent AI Decisions -->
      <div class="bg-white rounded-lg shadow">
        <div class="px-6 py-4 border-b border-gray-200">
          <h3 class="text-lg font-medium text-gray-900">Recent AI Decisions</h3>
        </div>
        <div class="p-6">
          <div class="space-y-4">
            <%= for decision <- @recent_decisions do %>
              <div class="border-l-4 border-purple-500 pl-4">
                <div class="flex items-center justify-between mb-2">
                  <h4 class="text-sm font-medium text-gray-900"><%= decision.decision_type %></h4>
                  <span class="text-xs text-gray-500"><%= decision.timestamp %></span>
                </div>
                <p class="text-sm text-gray-600 mb-2"><%= decision.reasoning %></p>
                <div class="flex items-center justify-between">
                  <div class="flex items-center">
                    <span class="text-xs text-gray-500">Confidence:</span>
                    <span class="ml-1 text-xs font-medium text-gray-900">
                      <%= Float.round(decision.confidence * 100, 1) %>%
                    </span>
                  </div>
                  <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium 
                    <%= if decision.outcome == "successful", do: "bg-green-100 text-green-800", else: "bg-red-100 text-red-800" %>">
                    <%= String.upcase(decision.outcome) %>
                  </span>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <!-- AI Learning & Training -->
    <div class="bg-white rounded-lg shadow">
      <div class="px-6 py-4 border-b border-gray-200">
        <h3 class="text-lg font-medium text-gray-900">AI Learning & Training</h3>
      </div>
      <div class="p-6">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <div class="text-center">
            <div class="text-3xl font-bold text-purple-600"><%= @ai_metrics.learning_iterations %></div>
            <div class="text-sm text-gray-500">Learning Iterations</div>
          </div>
          <div class="text-center">
            <div class="text-3xl font-bold text-blue-600"><%= @ai_metrics.model_version %></div>
            <div class="text-sm text-gray-500">Model Version</div>
          </div>
          <div class="text-center">
            <div class="text-3xl font-bold text-green-600"><%= @ai_metrics.customer_satisfaction %></div>
            <div class="text-sm text-gray-500">Customer Satisfaction</div>
          </div>
        </div>
        
        <div class="mt-6 flex justify-center space-x-4">
          <button phx-click="analyze_performance" class="bg-indigo-600 text-white px-4 py-2 rounded-md hover:bg-indigo-700 transition-colors">
            ðŸ“ˆ Analyze Performance
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
